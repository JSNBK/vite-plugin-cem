{
    "compilerOptions": {
      "target": "esnext",
      "module": "esnext",
      "allowJs": true,
      "moduleResolution": "node",
      "skipLibCheck": true,
      "noUnusedLocals": true,
      "experimentalDecorators": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "sourceMap": false,
      "outDir": "dist",
      "baseUrl": "./",
      "rootDir": "./",
      "types": [
        "vite/client",
      ]
    },
    "include": [
      "src/**/*",
    ],
    "exclude": [
      "node_modules"
    ]
}